#!/bin/sh

if [ -f ./.bagtentrc ]; then
  . ./.bagtentrc
elif [ -f ../.bagtentrc ]; then
  . ../.bagtentrc
fi

name=$(${BAGTENT_NAMEGEN:=bagtent-mkuuid})

if [ -z "${PWD%%*/content}" ]; then
  filepath="$name.md"
elif [ -d content ]; then
  filepath="content/$name.md"
else
  echo "content directory not found" >&2
  exit 1
fi

if [ "--open" = "$1" ]; then
  if [ -z "$EDITOR" ]; then
    EDITOR=nano
  fi
  $EDITOR "$filepath"
else
  touch "$filepath"
fi

echo "$name.md"
